{
  "manifest_version": 3,
  "name": "XPathAi",
  "version": "0.1",
  "description": "Generates XPath using AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
    "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/*", "contentScript.js"],
      "matches": ["<all_urls>"]
    }
  ],  
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}